<view class="class">
  <!-- 标题部分 -->
  <view class="title">
    <text class="title-name">没课约</text>
    
    
    
    <picker class="title-week" bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
      <view>
        <text>{{array[index]}}</text>
        <image src="{{imgUrl}}/down.png"></image>
      </view>
      
    </picker>
    
  </view>
  <!-- 课表部分 -->
  <view class="table">
    <view class="table-week">
      <text>一</text>
      <text>二</text>
      <text>三</text>
      <text>四</text>
      <text>五</text>
      <text>六</text>
      <text>日</text>
    </view>
    <view class="class-body">
      <!-- 12节 -->
      <view class="class12">
        <view class="table-time">
          <text>1</text>
          <text>2</text>
        </view>

        <view wx:for="{{[0,1,2,3,4,5]}}" 
              style="background-color:{{color[0][item]}}" 
              class="class-con" 
              bindtap="bindAppear" 
              data-classname="{{className.oneT[item]}}" 
              data-classweek="{{classWeekday[item]}}" 
              data-classtime="12节">
          <view>
            <text wx:for="{{className.oneT[item]}}" wx:for-item="i" class="class-name">{{i}}\n</text>     
          </view>
          
        </view>
        <view class="class-con" 
              id="sunday" 
              style="background-color:{{color[0][6]}}"
              bindtap="bindAppear" 
              data-classname="{{className.oneT[6]}}" 
              data-classweek="{{classWeekday[6]}}" 
              data-classtime="12节">
          <view>
            <text wx:for="{{className.oneT[6]}}" wx:for-item="i" class="class-name">{{i}}\n</text>  
          </view>
          
        </view>
      </view>
      <!-- 34节 -->
