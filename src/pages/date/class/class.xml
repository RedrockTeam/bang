  </view>
</scroll-view>
<!-- 弹窗 -->
  <view class="class-detail" hidden="{{hiddenFlag ? true : false}}" bindtap="bindDisappear">
    <view class="detail-con">
      <view class="detail-class">
        <image src="../../../images/className.png"></image>
        <view>
          <text>{{detailClassname}}</text>
        </view>
      </view>
      <view class="detail-name">
        <image src="../../../images/classTeacher.png"></image>
        <view>
          <text>{{detailTeacher}}</text>
          
        </view>
      </view>
      <view class="detail-time">
        <image src="../../../images/classTime.png"></image>
        <view>
          <text>{{detailWeek}} {{detailTime}}</text>
          
        </view>
      </view>
      <view class="detail-room">
        <image src="../../../images/classRoom.png"></image>
        <view>
          <text>{{detailClassroom}}</text>
          
        </view>
      </view>
      <view class="detail-week">
        <image src="../../../images/classWeek.png"></image>
        <view>
          <text>{{detailRawWeek}}</text>
          
        </view>
      </view>
    </view>
  </view>