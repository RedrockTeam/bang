<view class="login">
    <view class='login--header'>
        <image src="{{header}}" />
        <text>重邮帮</text>
    </view>
    <view class='login--info'>
        <input type="text"
                placeholder="学号"
                placeholder-style="color: #e6e6e6"
                type="number"
                bindchange="changeStu"/>
        <input type="text"
                placeholder="身份证后6位"
                placeholder-style="color: #e6e6e6"
                password="true"
                value="{{id}}"
                bindchange="changeId"/>
        <view class="btn">
          <button bindtap="loginAction">
            <text>登</text>
            <text>录</text>
          </button>
          <button bindtap="backToIndex">
            <text>返</text>
            <text>回</text>
          </button>
        </view>
    </view>
</view>
